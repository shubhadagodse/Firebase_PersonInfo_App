<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/tv_f_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"/>

            <TextView
                android:padding="5dp"
                android:id="@+id/tv_l_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignBottom="@+id/tv_f_name"/>

            <TextView
                android:padding="5dp"
                android:id="@+id/tv_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_margin="5dp"
                android:layout_alignBottom="@+id/tv_l_name"
            tools:layout_editor_absoluteX="16dp" />


            <TextView
                android:padding="5dp"
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:ignore="MissingConstraints"
                android:layout_alignBottom="@+id/tv_age"/>


            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_alignBottom="@+id/tv_email"/>


            <TextView
                android:padding="5dp"
                android:id="@+id/tv_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignBottom="@+id/tv_phone"
                tools:ignore="MissingConstraints" />


            <TextView
                android:padding="5dp"
                android:layout_margin="5dp"
                android:id="@+id/tv_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_birthdate"
                tools:ignore="MissingConstraints" />


            <TextView
                android:padding="5dp"
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignBottom="@+id/tv_country"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>